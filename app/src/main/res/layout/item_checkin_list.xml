<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            >

        <com.yun.ycw.crm.customview.CircleImageView
                android:id="@+id/item_checkIn_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/checkin_default"
                />

        <TextView
                android:id="@+id/item_checkIn_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张亮"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/item_checkIn_avatar"
                android:layout_marginTop="15dp"
                />

        <TextView
                android:id="@+id/item_checkIn_time"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="2016年3月28日 16:20"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/item_checkIn_avatar"
                android:layout_below="@id/item_checkIn_name"
                android:layout_centerVertical="true"
                android:layout_marginTop="2dp"
                />

        <TextView
                android:id="@+id/item_checkIn_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国铁建广场"
                android:textSize="12sp"
                android:textColor="@color/green"
                android:layout_toRightOf="@id/item_checkIn_avatar"
                android:layout_below="@id/item_checkIn_time"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                />
    </RelativeLayout>

    <TextView
            android:id="@+id/item_checkIn_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是备注信息"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:paddingLeft="70dp"
            android:layout_marginBottom="5dp"
            />

    <ImageView
            android:id="@+id/item_checkIn_cam"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            />
</LinearLayout>