<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/butonwhite"
              android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/neworder_customer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center_horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="18dp"
            android:text="某某"
            android:textColor="@color/black"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/neworder_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center_horizontal"
            android:paddingTop="18dp"
            android:text="下单时间"
            android:textColor="@color/black"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/neworder_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center_horizontal"
            android:paddingTop="18dp"
            android:text="0元"
            android:textColor="@color/black"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/neworder_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center_horizontal"
            android:paddingTop="18dp"
            android:text="0元"
            android:textColor="@color/black"
            android:textSize="12sp"

            />

        <TextView
            android:id="@+id/neworder_deduct"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_horizontal"
            android:paddingRight="5dp"
            android:paddingTop="18dp"
            android:text="0元"
            android:textColor="@color/black"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_gravity="center_vertical"
                  android:gravity="center_vertical"
                  android:paddingLeft="10dp"
                  android:text="收货地址："
                  android:textColor="@color/black"
                  android:textSize="10sp"
            />
        <TextView
            android:id="@+id/neworder_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:textColor="@color/black"
            android:textSize="10sp"
            />
    </LinearLayout>
</LinearLayout>