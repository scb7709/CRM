<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/butonwhite"
              android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/listview_goodsmall_icon"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            >

            <TextView
                android:id="@+id/listview_goodsmall_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="2"
                android:gravity="left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/listview_goodsmall_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌：塑料"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/listview_goodsmall_specifications"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="规格：D20*2/2"
                android:textSize="12sp"
                />
                <TextView
                    android:id="@+id/listview_goodsmall_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单价：20元/根"
                    android:textSize="12sp"
                    />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>