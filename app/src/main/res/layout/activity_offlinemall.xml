<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/butonwhite"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/offlinemal_back"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_selector"
            android:src="@mipmap/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我的商城"
            android:textColor="@color/green"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/offlinemal_picdown"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="更新"
            android:textColor="@color/green"
            android:textSize="15sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/lowline"></View>

    <!--  <ScrollView
          android:layout_width="match_parent"
          android:layout_height="150dp"
          >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/goodamallgreen"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/queryroundframe"
            android:focusable="true"

            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/search"/>

            <EditText
                android:id="@+id/offlinemal_query_ed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入商品名称..."
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/goodsmall_graybackground"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@drawable/lowline"></View>

        <LinearLayout
            android:id="@+id/offlinemal_img1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"

            android:orientation="horizontal">
            <ImageView
                android:id="@+id/lin11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/linewhite"
                />
            <ImageView
                android:id="@+id/lin12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/linewhite"
                />
            <ImageView
                android:id="@+id/lin13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/linewhite"
                />
            <ImageView
                android:id="@+id/lin14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/linewhite"
                />
            <ImageView
                android:id="@+id/lin15"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/linewhite"
                />
            <ImageView
                android:id="@+id/lin16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/linewhite"
                />
        </LinearLayout>
        <RadioGroup
            android:id="@+id/offlinemal_rg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"

            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/offlinemal_water_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="水工"
                android:textColor="@color/goods_text_color_selector"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/offlinemal_electricity_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"


                android:text="电工"
                android:textColor="@color/goods_text_color_selector"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/offlinemal_wood_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="木工"
                android:textColor="@color/goods_text_color_selector"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/offlinemal_tile_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="瓦工"
                android:textColor="@color/goods_text_color_selector"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/offlinemal_oil_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="油工"
                android:textColor="@color/goods_text_color_selector"
                android:textSize="15sp"/>

            <RadioButton
                android:id="@+id/offlinemal_tool_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="工具"
                android:textColor="@color/goods_text_color_selector"
                android:textSize="15sp"/>
            <RadioButton
                android:id="@+id/offlinemal_rb"
                android:layout_width="1dp"
                android:layout_height="1dp"
                />
        </RadioGroup>
        <LinearLayout
            android:id="@+id/offlinemal_img2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/lin21"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/lin22"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/lin23"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/lin24"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/lin25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/lin26"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/offlinemal_catgroy_ly"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/butonwhite"
        android:orientation="horizontal">

        <Button
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:clickable="false"
            android:text="分类"
            android:textColor="@color/goods_text_color_selector"
            android:textSize="12sp"/>

        <HorizontalScrollView
            android:id="@+id/offlinemal_catgroy_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:id="@+id/offlinemal_catgroy_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </RadioGroup>
        </HorizontalScrollView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/lowline"></View>
    <LinearLayout
        android:id="@+id/offlinemal_brand_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/butonwhite"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:clickable="false"
            android:text="品牌"
            android:textColor="@color/goods_text_color_selector"
            android:textSize="12sp"/>

        <HorizontalScrollView
            android:id="@+id/offlinemal_brand_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:id="@+id/offlinemal_brand_ly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></RadioGroup>
        </HorizontalScrollView>

    </LinearLayout>
    <View
        android:id="@+id/offlinemal_brand_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/lowline"
        android:visibility="gone"></View>
    <ListView
        android:id="@+id/offlinemal_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/butonwhite"
        />
    <!--    </LinearLayout>
    </ScrollView>-->
</LinearLayout>