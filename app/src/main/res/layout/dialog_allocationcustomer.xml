<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="客户指派"
        android:textColor="#000"
        android:textSize="20sp"
        />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:layout_marginTop="40dp"
                  android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_allocation_sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="请选择销售代表"
            android:textColor="#000"
            android:textSize="18sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/dialog_allocation_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/my_dialog_btn"
            android:text="确认"
            android:textColor="@color/head_photo_select_color"
            android:textSize="15sp"
            />
        <Button
            android:id="@+id/dialog_allocation_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/my_dialog_btn"
            android:text="取消"
            android:textColor="@color/head_photo_select_color"
            android:textSize="15sp"
            />
    </LinearLayout>
</LinearLayout>
