<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/listview_goodsdetails_category"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="xxx"
        android:textColor="@color/black"
        />

    <View
        android:id="@+id/listview_goodsdetails_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/rectangularframe"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/listview_goodsdetails_icon"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            >

            <TextView
                android:id="@+id/listview_goodsdetails_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="2"
                android:gravity="left"
                android:text="减肥的减肥的恢复速度fffffffffffffffffffffff进公司控股"
                android:textColor="@color/black"
                android:textSize="12sp"
                />


            <TextView
                android:id="@+id/listview_goodsdetails_specifications"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="规格：D20*2/2"
                android:textSize="12sp"
                />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_below="@id/listview_goodsdetails_specifications"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/listview_goodsdetails_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单价规格：20元/根"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/listview_goodsdetails_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="X2"
                    />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>