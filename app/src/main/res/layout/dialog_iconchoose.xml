<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
        >


    <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="头像选择"
            android:textColor="#000"
            android:textSize="15sp"
            android:gravity="center_vertical"
            />

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/slidingline"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            >

        <Button
                android:id="@+id/dialogchoses_takephoto_bu"
                android:layout_height="40dp"
                android:layout_width="100dp"
                android:text="打开相机"
                android:layout_marginRight="25dp"
                android:textColor="@color/head_photo_select_color"
                android:background="@drawable/my_dialog_btn"
                android:textSize="15sp"
                />


        <Button
                android:id="@+id/dialogchoses_chosesphoto_bu"
                android:layout_height="40dp"
                android:layout_width="100dp"
                android:textColor="@color/head_photo_select_color"
                android:background="@drawable/my_dialog_btn"
                android:text="选择图库"
                android:layout_marginLeft="25dp"
                android:textSize="15sp"
                />
    </LinearLayout>
</LinearLayout>
