<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/customer_re"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangularframe"
            >

        <ImageButton
                android:id="@+id/add_schedule_back"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/back_selector"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/back"
                />

        <TextView
                android:id="@+id/customer_man"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="新建工作计划"
                android:textColor="@color/green"
                android:textSize="20sp"
                />

        <Button
                android:id="@+id/confirm_add_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="确定"
                android:textColor="@color/green"
                android:background="@null"
                android:textSize="20sp"
                android:layout_marginRight="5dp"
                />
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_marginTop="10dp"
            android:clickable="true"
            >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >

            <TextView
                    android:id="@+id/target_money_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="目标业绩："
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"
                    android:textColor="#000"
                    />

            <TextView
                    android:id="@+id/target_money_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="元"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    />

            <EditText
                    android:id="@+id/target_money"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="输入目标业绩"
                    android:textSize="15sp"
                    android:gravity="right|center_vertical"
                    android:background="@null"
                    android:paddingRight="10dp"
                    android:layout_toRightOf="@id/target_money_name"
                    android:layout_toLeftOf="@id/target_money_unit"
                    android:inputType="numberDecimal"
                    />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectangularframe"
                >

            <TextView
                    android:id="@+id/target_chief_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="开发工长数："
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"
                    android:textColor="#000"
                    />

            <TextView
                    android:id="@+id/target_chief_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="个"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    />

            <EditText
                    android:id="@+id/target_chief"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="输入目标开发工长数"
                    android:textSize="15sp"
                    android:gravity="right|center_vertical"
                    android:background="@null"
                    android:paddingRight="10dp"
                    android:layout_toRightOf="@id/target_chief_name"
                    android:layout_toLeftOf="@id/target_chief_unit"
                    android:inputType="number"
                    />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >

            <TextView
                    android:id="@+id/target_visitChief_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="回访工长数："
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"
                    android:textColor="#000"
                    />

            <TextView
                    android:id="@+id/target_visitChief_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="个"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    />

            <EditText
                    android:id="@+id/target_visitChief"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="输入目标回访工长数"
                    android:textSize="15sp"
                    android:gravity="right|center_vertical"
                    android:background="@null"
                    android:paddingRight="10dp"
                    android:layout_toRightOf="@id/target_visitChief_name"
                    android:layout_toLeftOf="@id/target_visitChief_unit"
                    android:inputType="number"
                    />
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/select_date_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@drawable/rectangularframe"
                >

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    >

                <TextView
                        android:id="@+id/schedule_startTime_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="开始日期选择:"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        />

                <TextView
                        android:id="@+id/schedule_startTime"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:hint="输入开始日期"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    >

                <TextView
                        android:id="@+id/schedule_endTime_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="结束日期选择:"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="30dp"
                        />

                <TextView
                        android:id="@+id/schedule_endTime"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:hint="输入结束日期"
                        />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                >

            <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#ffefefef"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    >

                <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/add_schedule_note_bg"
                        >

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                        <EditText
                                android:id="@+id/schedule_note"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@null"
                                android:hint="备注:输入其他信息"
                                android:paddingLeft="30dp"
                                android:textSize="15sp"
                                android:textColor="#000"
                                />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>